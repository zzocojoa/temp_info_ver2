{
  "name": "my-app",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"electron .\"",
    "server": "node server/app.js",
    "build": "cd client && npm run build",
    "build-client": "cd client && npm run build",
    "electron": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "electron-pack": "electron-builder build --win",
    "package-win": "electron-packager . HeatWaveVisualizer --platform=win32 --arch=x64 --out=\"C:\\Users\\user\\Desktop\"",
    "package-client": "npm run build-client && electron-packager . HeatWaveVisualizer --platform=win32 --arch=x64 --out=\"C:\\Users\\user\\Desktop\\dist\" --overwrite",
    "package-server": "pkg server/app.js --targets node16-win-x64 --output server.exe"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "archiver": "^7.0.1",
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "chartjs-adapter-date-fns": "^3.0.0",
    "chartjs-adapter-luxon": "^1.3.1",
    "chartjs-adapter-moment": "^1.0.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "d3": "^7.8.5",
    "date-fns": "^3.6.0",
    "express": "^4.18.2",
    "firebase": "^10.8.1",
    "glob": "^11.0.0",
    "kmeans": "^0.0.1",
    "luxon": "^3.4.4",
    "ml-kmeans": "^6.0.0",
    "moment": "^2.30.1",
    "mongoose": "^8.1.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "papaparse": "^5.4.1",
    "plotly": "^1.0.6",
    "plotly.js": "^2.33.0",
    "plotly.js-dist-min": "^2.33.0",
    "react": "^18.2.0",
    "react-apexcharts": "^1.4.1",
    "react-dom": "^18.2.0",
    "react-plotly.js": "^2.6.0",
    "react-router-dom": "^6.22.0",
    "recharts": "^2.11.0",
    "uuid": "^9.0.1",
    "worker-loader": "^3.0.8"
  },
  "bin": {
    "server": "server/app.js"
  },
  "pkg": {
    "targets": [
      "node16-linux-x64",
      "node16-macos-x64",
      "node16-win-x64"
    ],
    "assets": [
      "client/build/**/*",
      "public/**/*",
      "views/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  }
}
